{% style %}
  #shopify-section-{{ sid }}{
    --myed-max: {{ s.max_width | default: 1240 }}px;
    --myed-bg: {{ s.bg_color }};
    --myed-card: {{ s.card_bg }};
    --myed-text: {{ s.text_color }};
    --myed-muted: {{ s.muted_color }};
    --myed-border: rgba(0,0,0,.10);

    --myed-kicker-color: {{ s.kicker_text_color | default: '#666666' }};
    --myed-title-color: {{ s.title_text_color | default: '#111111' }};
    --myed-sub-color: {{ s.subtitle_text_color | default: '#666666' }};
    --myed-card-title-color: {{ s.card_title_color | default: '#111111' }};
    --myed-card-tag-color: {{ s.card_tag_color | default: '#111111' }};
    --myed-panel-title-color: {{ s.panel_title_color | default: '#111111' }};
    --myed-panel-desc-color: {{ s.panel_desc_color | default: '#666666' }};

    --myed-radius: {{ radius }}px;
    --myed-radius-media: {{ radius_media }}px;
    --myed-radius-panel: {{ radius_panel }}px;

    --myed-side-pad: {{ s.side_padding | default: 16 }}px;
    --myed-gap-m: {{ s.gap_mobile | default: 18 }}px;
    --myed-gap-d: {{ s.gap_desktop | default: 22 }}px;

    --myed-left-pad-m: {{ s.left_pad_mobile | default: 18 }}px;
    --myed-left-pad-d: {{ s.left_pad_desktop | default: 22 }}px;

    --myed-left-alpha: {{ s.left_alpha | default: 70 | times: 0.01 }};
    --myed-left-blur: {{ s.left_blur | default: 10 }}px;

    --myed-cta-gap-d: {{ s.cta_gap_desktop | default: 10 }}px;
    --myed-cta-gap-m: {{ s.cta_gap_mobile | default: 8 }}px;

    --myed-shadow: {{ shadow_token }};

    --myed-orb-size-m: {{ s.orb_size_mobile | default: 68 }}px;
    --myed-orb-size-d: {{ s.orb_size_desktop | default: 84 }}px;
    --myed-orb-gap-m: {{ s.orb_gap_mobile | default: 14 }}px;
    --myed-orb-gap-d: {{ s.orb_gap_desktop | default: 14 }}px;
    --myed-orb-blur: {{ s.orb_blur | default: 10 }}px;
    --myed-orb-alpha: {{ s.orb_bg_opacity | default: 70 | times: 0.01 }};
    --myed-orb-ring-glow: {{ s.orb_ring_glow | default: 35 | divided_by: 100.0 }};
    --myed-orb-spin: {{ s.orb_spin | default: 12 }}s;
    --myed-orb-label: {% if s.orb_label_style == 'light' %}#ffffff{% else %}#111111{% endif %};
    --myed-orb-align-d: {{ orb_align_desktop }};
    --myed-orb-align-m: {{ orb_align_mobile }};

    --myed-panel-orb-size-m: {{ s.panel_orb_size_mobile | default: s.orb_size_mobile | default: 68 }}px;
    --myed-panel-orb-size-d: {{ s.panel_orb_size_desktop | default: s.orb_size_desktop | default: 84 }}px;
    --myed-panel-orb-gap-m: {{ s.panel_orb_gap_mobile | default: s.orb_gap_mobile | default: 14 }}px;
    --myed-panel-orb-gap-d: {{ s.panel_orb_gap_desktop | default: s.orb_gap_desktop | default: 16 }}px;
    --myed-panel-orb-align-m: {{ panel_orb_align_mobile }};
    --myed-panel-orb-align-d: {{ panel_orb_align_desktop }};

    --myed-right-bg: var(--myed-card);
    --myed-right-border: rgba(0,0,0,.08);
    --myed-right-blur-token: none;
    --myed-right-alpha-glass: {{ right_alpha_setting | times: 0.01 }};
    --myed-right-border-alpha-glass: {{ right_border_alpha_setting | times: 0.01 }};
    --myed-right-blur-glass: {{ s.right_glass_blur | default: 12 }}px;

    --myed-panel-bg: rgba(255,255,255,.85);
    --myed-panel-border: rgba(0,0,0,.08);
    --myed-panel-hover-bg: rgba(255,255,255,.95);
    --myed-panel-hover-border: rgba(0,0,0,.14);
    --myed-panel-blur-token: none;
    --myed-panel-alpha-glass: {{ panel_alpha_setting | times: 0.01 }};
    --myed-panel-border-alpha-glass: {{ panel_border_alpha_setting | times: 0.01 }};
    --myed-panel-blur-glass: {{ s.panel_glass_blur | default: 10 }}px;
    --myed-panel-hover-alpha: {{ panel_hover_alpha_setting | times: 0.01 }};

    position: relative;
    overflow: hidden;
    padding-top: {{ s.padding_top | default: 24 }}px;
    padding-bottom: {{ s.padding_bottom | default: 24 }}px;

    {% if bg_mode == 'gradient' %}
      background: linear-gradient({{ bg_grad_angle }}deg, {{ s.bg_color }}, {{ s.bg_color_2 | default: s.bg_color }});
    {% else %}
      background: var(--myed-bg);
    {% endif %}
  }

  /* panels desktop columns from editor (kept inline because it’s dynamic) */
  @media (min-width: 750px){
    #shopify-section-{{ sid }} .myed-panels{
      grid-template-columns: repeat({{ s.panel_cols | default: 3 }}, minmax(0,1fr));
    }
  }

  /* panel min height from editor (kept inline because it’s dynamic) */
  #shopify-section-{{ sid }} .myed-panel{
    min-height: {{ s.panel_min_h | default: 84 }}px;
  }

  {% if s.orb_limit_mobile and s.orb_limit_mobile > 0 %}
  @media (max-width: 989px){
    #shopify-section-{{ sid }} .myed-orbs--cta > .myed-orb-tile:nth-child(n+{{ s.orb_limit_mobile | plus: 1 }}){
      display: none;
    }
  }
  {% endif %}

  {% if s.orb_limit_desktop and s.orb_limit_desktop > 0 %}
  @media (min-width: 990px){
    #shopify-section-{{ sid }} .myed-orbs--cta > .myed-orb-tile:nth-child(n+{{ s.orb_limit_desktop | plus: 1 }}){
      display: none;
    }
  }
  {% endif %}

  {% if s.panel_orb_limit_mobile and s.panel_orb_limit_mobile > 0 %}
  @media (max-width: 989px){
    #shopify-section-{{ sid }} .myed-orbs--panel > .myed-orb-tile:nth-child(n+{{ s.panel_orb_limit_mobile | plus: 1 }}){
      display: none;
    }
  }
  {% endif %}

  {% if s.panel_orb_limit_desktop and s.panel_orb_limit_desktop > 0 %}
  @media (min-width: 990px){
    #shopify-section-{{ sid }} .myed-orbs--panel > .myed-orb-tile:nth-child(n+{{ s.panel_orb_limit_desktop | plus: 1 }}){
      display: none;
    }
  }
  {% endif %}

  /* richtext safety: prevent default <p> margins from breaking spacing */
  #shopify-section-{{ sid }} .myed-sub.rte p{ margin: 0; }
  #shopify-section-{{ sid }} .myed-sub.rte p + p{ margin-top: 10px; }

  {% if s.left_glass %}
    #shopify-section-{{ sid }} .myed-left{
      -webkit-backdrop-filter: blur(var(--myed-left-blur));
      backdrop-filter: blur(var(--myed-left-blur));
    }
  {% endif %}

  #shopify-section-{{ sid }}.myed-hero--right-glass .myed-right,
  body.myed-has-site-bg #shopify-section-{{ sid }} .myed-right{
    --myed-right-bg: rgba(255,255,255,var(--myed-right-alpha-glass));
    --myed-right-border: rgba(255,255,255,var(--myed-right-border-alpha-glass));
    --myed-right-blur-token: blur(var(--myed-right-blur-glass));
  }

  #shopify-section-{{ sid }}.myed-hero--panel-glass .myed-panel,
  body.myed-has-site-bg #shopify-section-{{ sid }} .myed-panel{
    --myed-panel-bg: rgba(255,255,255,var(--myed-panel-alpha-glass));
    --myed-panel-border: rgba(255,255,255,var(--myed-panel-border-alpha-glass));
    --myed-panel-hover-bg: rgba(255,255,255,var(--myed-panel-hover-alpha));
    --myed-panel-hover-border: rgba(255,255,255,var(--myed-panel-border-alpha-glass));
    --myed-panel-blur-token: blur(var(--myed-panel-blur-glass));
  }

  body.myed-has-site-bg #shopify-section-{{ sid }} .myed-panel:hover{
    --myed-panel-hover-bg: rgba(255,255,255,var(--myed-panel-hover-alpha));
    --myed-panel-hover-border: rgba(255,255,255,var(--myed-panel-border-alpha-glass));
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-solid .myed-btn{
    background: #111;
    color: #fff;
    border-color: rgba(0,0,0,.16);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-solid .myed-btn--ghost{
    background: #fff;
    color: #111;
    border-color: rgba(0,0,0,.16);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-ghost .myed-btn{
    background: transparent;
    color: var(--myed-text);
    border-color: rgba(0,0,0,.32);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-ghost .myed-btn:hover{
    background: rgba(0,0,0,.06);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-ghost .myed-btn--ghost{
    background: rgba(255,255,255,.14);
    color: var(--myed-text);
    border-color: rgba(0,0,0,.20);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-glass .myed-btn{
    background: rgba(255,255,255,.28);
    color: #111;
    border-color: rgba(255,255,255,.40);
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-glass .myed-btn:hover{
    background: rgba(255,255,255,.36);
  }

  #shopify-section-{{ sid }}.myed-hero--cta-style-glass .myed-btn--ghost{
    background: rgba(255,255,255,.20);
    color: #111;
    border-color: rgba(255,255,255,.32);
  }
{% endstyle %}

  <section
  class="myed-hero
    myed-hero--layout-{{ layout_balance }}
    myed-hero--cta-{{ cta_size }}
    myed-hero--cta-style-{{ s.cta_style | default: 'solid' }}
    myed-hero--h1-{{ heading_size }}
    myed-hero--body-{{ body_size }}
    myed-hero--ratio-{{ media_ratio }}
    myed-hero--panel-{{ panel_size }}
    {% if s.right_glass_enable %}myed-hero--right-glass{% endif %}
    {% if s.panel_glass_enable %}myed-hero--panel-glass{% endif %}
    {% unless show_left %}is-no-left{% endunless %}
    {% unless show_right %}is-no-right{% endunless %}
    {% if show_left == false and show_right == false %}is-media-only{% endif %}"
  aria-label="Hero"
>
  <div class="myed-hero__bg" aria-hidden="true">
    {%- if use_bg_video -%}
      {{ s.bg_video | video_tag:
        autoplay: s.bg_video_autoplay,
        loop: true,
        muted: true,
        controls: false,
        playsinline: true,
        preload: bg_preload,
        class: 'myed-hero__bg-media'
      }}
    {%- elsif use_bg_image and s.bg_image != blank -%}
      <img
        class="myed-hero__bg-media"
        src="{{ s.bg_image | image_url: width: 2400 }}"
        alt=""
        loading="{{ img_loading }}"
        decoding="async"
        width="{{ s.bg_image.width }}"
        height="{{ s.bg_image.height }}"
        {% if img_fetchpriority != blank %}fetchpriority="{{ img_fetchpriority }}"{% endif %}
      >
    {%- endif -%}
    <div class="myed-hero__overlay" style="opacity: {{ bg_alpha }};"></div>
  </div>

  <div class="myed-hero__inner">

    {%- if s.show_hero_menu and s.hero_menu != blank -%}
      <nav class="myed-hero__menu" aria-label="Hero menu">
        <ul>
          {%- for link in s.hero_menu.links -%}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {%- endfor -%}
        </ul>
      </nav>
    {%- endif -%}

    <div class="myed-hero__grid">
      {%- if show_left -%}
      <div class="myed-left">
        {%- if s.kicker != blank -%}
          <div class="myed-kicker">{{ s.kicker }}</div>
        {%- endif -%}

        <h1 class="myed-title">{{ s.title }}</h1>

        {%- if s.subtitle != blank -%}
          <div class="myed-sub rte">{{ s.subtitle }}</div>
        {%- endif -%}

        <div class="myed-cta">
          {%- if s.cta_mode == 'orbs' and orb_blocks.size > 0 -%}
          <div class="myed-orbs myed-orbs--cta myed-orbs--m-{{ s.orb_wrap_mobile | default: 'scroll' }} myed-orbs--d-{{ s.orb_wrap_desktop | default: 'wrap' }}{% if s.orb_pulse %} myed-orbs--pulse{% endif %}" role="list" aria-label="Hero actions">
              {%- for block in orb_blocks -%}
              {%- assign orb_img = block.settings.orb_image -%}
              {%- assign orb_label = block.settings.orb_label -%}
              {%- assign orb_link = block.settings.orb_link -%}
              {%- assign orb_newtab = block.settings.orb_newtab -%}
              {%- assign orb_label_color = block.settings.orb_label_color -%}
              {%- assign orb_label_bg = block.settings.orb_label_bg -%}
              {%- assign orb_label_bg_opacity = block.settings.orb_label_bg_opacity | default: 100 -%}
              {%- assign orb_label_style = '' -%}
              {%- if orb_label_color != blank -%}
                {%- assign orb_label_style = orb_label_style | append: '--myed-orb-label-c:' | append: orb_label_color | append: ';' -%}
              {%- endif -%}
              {%- if orb_label_bg != blank -%}
                {%- assign orb_bg_alpha = orb_label_bg_opacity | default: 100 | times: 0.01 -%}
                {%- assign orb_bg_rgba = orb_label_bg | color_modify: 'alpha', orb_bg_alpha -%}
                {%- assign orb_label_style = orb_label_style | append: '--myed-orb-label-bg:' | append: orb_bg_rgba | append: ';' -%}
              {%- endif -%}
              {%- assign orb_style = '' -%}
              {%- if orb_label_color != blank -%}
                {%- assign orb_style = orb_style | append: '--myed-orb-label-color:' | append: orb_label_color | append: ';' -%}
              {%- endif -%}
              {%- if orb_label_bg != blank -%}
                  {%- assign orb_bg_alpha = orb_label_bg_opacity | times: 0.01 -%}
                  {%- assign orb_bg_rgba = orb_label_bg | color_modify: 'alpha', orb_bg_alpha -%}
                  {%- assign orb_style = orb_style | append: '--myed-orb-label-bg:' | append: orb_bg_rgba | append: ';' -%}
                {%- endif -%}
                {%- if orb_link != blank -%}
                  <a class="myed-orb-tile"
                     href="{{ orb_link }}"
                     role="listitem"
                     data-myed-event="hero_orb_click"
                     data-myed-component="hero_premium"
                     data-myed-label="{{ orb_label | escape }}"
                     data-myed-href="{{ orb_link }}"
                     {{ block.shopify_attributes }}
                     {% if orb_style != '' %}style="{{ orb_style }}"{% endif %}
                     {% if orb_newtab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                {%- else -%}
                  <div class="myed-orb-tile is-disabled" role="listitem" {{ block.shopify_attributes }} {% if orb_style != '' %}style="{{ orb_style }}"{% endif %}>
                {%- endif -%}
                    <span class="myed-orb">
                      {%- if orb_img != blank -%}
                        {%- assign orb_img_width = s.orb_size_desktop | default: 84 | times: 2 | at_most: 320 -%}
                        {%- assign orb_img_2x = orb_img_width | times: 2 -%}
                        {%- if orb_img_2x > 320 -%}{%- assign orb_img_2x = 320 -%}{%- endif -%}
                        {%- assign orb_render_m = s.orb_size_mobile | default: 72 -%}
                        {%- assign orb_render_d = s.orb_size_desktop | default: 84 -%}
                        <img class="myed-orb__img"
                             src="{{ orb_img | image_url: width: orb_img_width }}"
                             srcset="
                               {{ orb_img | image_url: width: orb_img_width }} {{ orb_img_width }}w,
                               {{ orb_img | image_url: width: orb_img_2x }} {{ orb_img_2x }}w
                             "
                             sizes="(max-width: 989px) {{ orb_render_m }}px, {{ orb_render_d }}px"
                             width="{{ orb_img_width }}"
                             height="{{ orb_img_width }}"
                             alt="{{ orb_label | default: 'Orb' | escape }}"
                             loading="lazy"
                             decoding="async">
                      {%- endif -%}
                    </span>
                    {%- if orb_label != blank -%}
                      <span class="myed-orb__label" {% if orb_label_style != '' %}style="{{ orb_label_style }}"{% endif %}>{{ orb_label }}</span>
                    {%- endif -%}
                {%- if orb_link != blank -%}
                  </a>
