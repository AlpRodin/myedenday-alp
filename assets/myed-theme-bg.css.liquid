{% if settings.myed_bg_enable and settings.myed_bg_image != blank %}
.myed-site-bg {
  position: fixed;
  inset: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  display: block;
  z-index: 0;
  background-image: var(--myed-bg-url);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: {{ settings.myed_bg_opacity | divided_by: 100.0 }};
}

body.myed-has-site-bg,
body.myed-has-site-bg.gradient {
  --myed-bg-url: url('{{ settings.myed_bg_image | image_url: width: 1600 }}');
  background: var(--myed-bg-url) center / cover no-repeat fixed !important;
}

@media (max-width: 749px) {
  body.myed-has-site-bg,
  body.myed-has-site-bg.gradient {
    --myed-bg-url: url('{{ settings.myed_bg_image | image_url: width: 900 }}');
    background-attachment: scroll;
  }

  .myed-site-bg {
    background-attachment: scroll;
  }
}

body.myed-has-site-bg > header,
body.myed-has-site-bg > main,
body.myed-has-site-bg > footer {
  position: relative;
  z-index: 1;
}
{% else %}
.myed-site-bg {
  background-image: none;
}
{% endif %}
