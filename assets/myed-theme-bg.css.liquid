{% if settings.myed_bg_enable and settings.myed_bg_image != blank %}
.myed-site-bg {
  position: fixed;
  inset: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
  background-image: url('{{ settings.myed_bg_image | image_url: width: 1920 }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: {{ settings.myed_bg_opacity | divided_by: 100.0 }};
}

body.myed-has-site-bg,
body.myed-has-site-bg.gradient {
  background: transparent !important;
}

body.myed-has-site-bg > header,
body.myed-has-site-bg > main,
body.myed-has-site-bg > footer {
  position: relative;
  z-index: 1;
}
{% else %}
.myed-site-bg {
  background-image: none;
}
{% endif %}
